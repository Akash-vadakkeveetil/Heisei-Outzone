      <h1>Camp Details</h1>

    <div class="details-container">
      <% if (pharmacyDetails) { %>
        <p style="color: black; font-size: 4vh;">Username: <%= pharmacyDetails.username %></p>
        <p style="color: black; font-size: 4vh;">Camp Name: <%= pharmacyDetails.Camp_name %></p>
        <p style="color: black; font-size: 4vh;">Location: <%= pharmacyDetails.location %></p>
        <p style="color: black; font-size: 4vh;">Pin No: <%= pharmacyDetails.pinno %></p>
        <p style="color: black; font-size: 4vh;">Contact Number: <%= pharmacyDetails.contactnumber %></p>
        <p style="color: black; font-size: 4vh;">Established: <%= 
          new Date(pharmacyDetails.established).toLocaleDateString('en-GB', {
            year: 'numeric',
            month: '2-digit',
            day: '2-digit'
          }).split('/').join('/') 
        %></p>
      <% } else { %>
        <p>Camp details not found.</p>
      <% } %>
